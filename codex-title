#!/usr/bin/env python3
"""Thin launcher for codex-title (single source in src/codex_title/cli.py)."""

from __future__ import annotations

import sys
from pathlib import Path


def main() -> int:
    try:
        from codex_title.cli import main as cli_main
    except ImportError:
        src_root = Path(__file__).resolve().parent / "src"
        if src_root.exists():
            sys.path.insert(0, str(src_root))
            from codex_title.cli import main as cli_main
            return cli_main()
        print(
            "codex-title is not installed. Use install.sh, pip, or uv to install.",
            file=sys.stderr,
        )
        return 1
    return cli_main()


if __name__ == "__main__":
    raise SystemExit(main())
